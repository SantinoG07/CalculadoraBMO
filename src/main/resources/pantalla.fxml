<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="908.0" prefWidth="1061.0" spacing="10" stylesheets="@estilo.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controlador">
   <children>
      <Pane fx:id="mainPane" prefHeight="70.0" prefWidth="1061.0" styleClass="contenedor" stylesheets="@estilo.css" VBox.vgrow="ALWAYS">
      <children>
            <Label fx:id="modoleyenda" layoutX="400.0" layoutY="10.0" style="-fx-text-fill: gray; -fx-font-size: 100;" text="" />
            <Button fx:id="btnon" layoutX="959.0" layoutY="32.0" mnemonicParsing="false" onAction="#mbtnon" text="ON" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <TextArea fx:id="subMenu" layoutX="20.0" layoutY="260.0" managed="false" prefHeight="120" prefWidth="300" style="-fx-font-size:14;" visible="false" wrapText="true" />
            <Label fx:id="salidadefinirmatrices" layoutX="400.0" layoutY="10.0" style="-fx-text-fill: gray; -fx-font-size: 40;" text="" />
            <TextField fx:id="pantalla" layoutX="35.0" layoutY="31.0" prefHeight="108.0" prefWidth="256.0" styleClass="monitor" stylesheets="@estilo.css" />


         <Button layoutX="566.0" layoutY="500.0" onAction="#mostrarPanelA" styleClass="numeros" text="Mostrar Panel A" />
         <Button layoutX="735.0" layoutY="500.0" onAction="#mostrarPanelB" styleClass="numeros" text="Mostrar Panel B" />


         <Button fx:id="vectores" id="btnvectores" layoutX="50.0" layoutY="288.0" mnemonicParsing="false" onAction="#mvectores" styleClass="calculo" stylesheets="@estilo.css" text="Vectores" textAlignment="CENTER">
            <font>
               <Font name="System Bold" size="12.0" />
            </font>
         </Button>

         <Button fx:id="btnmatrices" id="btnmatrices" layoutX="170.0" layoutY="288.0" mnemonicParsing="false" onAction="#mmatrices" styleClass="calculo" text="Matrices" textAlignment="CENTER">
            <font>
               <Font name="System Bold" size="12.0" />
            </font>
         </Button>

         <Button fx:id="btnecuaciones" layoutX="290.0" layoutY="288.0" styleClass="rombo" mnemonicParsing="false">
            <graphic>
               <StackPane>
                  <Label text="Ecuaciones" style="-fx-rotate: -45; -fx-text-fill: black; -fx-font-weight: bold;" />
               </StackPane>
            </graphic>
         </Button>

         <Button fx:id="btncalculos" layoutX="410.0" layoutY="288.0" mnemonicParsing="false" onAction="#mcalculos" styleClass="boton-triangulo" />



         <StackPane fx:id="contenedorVistas" layoutX="506.0" layoutY="35.0" prefHeight="285.0" prefWidth="400.0" styleClass="botones"/>

         </children>

      </Pane>
   </children>
</VBox>
